<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sctma.kegeratorv1.AdminTop">

    <android.support.v7.widget.CardView
        android:id="@+id/beerAdminTopCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:layout_constraintLeft_toRightOf="@+id/userAdminTopCardView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/beerAdminTopLinearLayout"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/loginBarLinearLayout"
            app:layout_constraintLeft_toRightOf="@+id/userAdminTopLinearLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/beersTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Beer"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/keg1Image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_weight="1"
                app:srcCompat="@drawable/keg" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/addBeersTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="Add Keg"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editBeersTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.66"
                android:gravity="center_vertical|center_horizontal"
                android:text="Edit Keg"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deleteBeersTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.66"
                android:gravity="center_vertical|center_horizontal"
                android:text="Delete Keg"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/userAdminTopCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/beerAdminTopCardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/userAdminTopLinearLayout"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/loginBarLinearLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/beerAdminTopLinearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/usersTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.66"
                android:gravity="center_vertical|center_horizontal"
                android:text="Users"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/keg1Image"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_weight="1.66"
                app:srcCompat="@drawable/user" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/addUsersTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="Add Users"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editUsersTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.66"
                android:gravity="center_vertical|center_horizontal"
                android:text="Edit Users"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deleteUsersTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.66"
                android:gravity="center_vertical|center_horizontal"
                android:text="Delete Users"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
